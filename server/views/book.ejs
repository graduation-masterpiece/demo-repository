<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Books in Shortform</title>
    
    <!-- Open Graph 메타태그 -->
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= description %>">
    <meta property="og:image" content="<%= imageUrl %>">
    <meta property="og:url" content="https://bookcard.site/book/<%= bookId %>">
    <meta property="og:type" content="website">
    
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= title %>">
    <meta name="twitter:description" content="<%= description %>">
    <meta name="twitter:image" content="<%= imageUrl %>">
  </head>
  <body>
    <script>
      (function () {
        const params = new URLSearchParams(window.location.search);
        
        const source = params.get('utm_source');
        const medium = params.get('utm_medium');
        const campaign = params.get('utm_campaign');
        
        const pathParts = window.location.pathname.split('/');
        const content = pathParts[pathParts.length - 1];
        
        if (source || medium || campaign || content) {
          sessionStorage.setItem('utm_source', source || '');
          sessionStorage.setItem('utm_medium', medium || '');
          sessionStorage.setItem('utm_campaign', campaign || '');
          sessionStorage.setItem('utm_content', content || '');
          sessionStorage.setItem('utm_access_time', new Date());
      
          // 필요할 경우에만 리디렉션
          const bookId = '<%= bookId %>';
          const cleanUrl = `/book/${bookId}`; // utm 없이 깨끗한 주소로 이동
          if (window.location.pathname + window.location.search !== cleanUrl) {
            window.history.replaceState(null, '', cleanUrl);
          }
        }
      })();
    </script>
    <noscript>The browser doesn't support Script.</noscript>
  </body>
</html>
